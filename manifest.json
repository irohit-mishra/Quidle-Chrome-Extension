{
  "manifest_version": 3,
  "name": "Quidle",
  "version": "2.0.1",
  "description": "Automatically closes inactive tabs based on your custom rules.",
  "author": "Rohit Mishra",
  "permissions": [
    "tabs",
    "storage",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}